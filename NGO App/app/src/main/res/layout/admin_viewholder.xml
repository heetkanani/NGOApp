<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView android:layout_height="match_parent" android:layout_width="match_parent">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:background="@drawable/grdnt">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:textColor="#d9e5f3" android:text="aman" android:id="@+id/vhname"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:textColor="#d9e5f3" android:text="aman@gmail.com" android:id="@+id/vhemail" android:layout_marginTop="10dp"/>

        <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:textColor="#d9e5f3" android:text="trustNo" android:id="@+id/vhtrustno" android:layout_marginTop="10dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:textColor="#d9e5f3" android:text="9898989898" android:id="@+id/vhphone" android:layout_marginTop="10dp"/>
        <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:textColor="#d9e5f3" android:text="Description" android:id="@+id/vhdesc" android:layout_marginTop="10dp"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginTop="10dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="25dp" android:textColor="#d9e5f3" android:text="PassBook:" android:id="@+id/passbook" android:layout_marginTop="10dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="150dp" android:background="#009a9a" android:text="view photo" android:id="@+id/btnpassbook" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_marginLeft="100dp"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginTop="10dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="25dp" android:textColor="#d9e5f3" android:text="Proof:" android:id="@+id/proof" android:layout_marginTop="10dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="150dp" android:background="#009a9a" android:text="view photo" android:id="@+id/btnproof" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:layout_marginLeft="150dp"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginTop="50dp">

    <Button android:layout_height="wrap_content" android:layout_width="150dp" android:background="#009a9a" android:text="Verify" android:id="@+id/vhverify" android:layout_marginTop="50dp" android:layout_marginLeft="30dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="150dp" android:background="#009a9a" android:text="Don't Verify" android:id="@+id/vhdverify" android:layout_marginTop="50dp" android:layout_marginRight="5dp" android:layout_marginLeft="50dp"/>

</LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>