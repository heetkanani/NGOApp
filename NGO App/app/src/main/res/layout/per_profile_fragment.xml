<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="55dp"
    android:layout_marginStart="5dp" android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/grdnt" android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="10dp" android:text="Name : " android:textSize="25dp" android:textColor="#d9e5f3" android:textStyle="bold"/>

    <TextView android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="10dp" android:text="" android:textSize="25dp" android:textColor="#d9e5f3" android:textStyle="bold" android:id="@+id/user_txtname"/>

</LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content" android:layout_height="50dp" android:text="Phone No : " android:textSize="25dp" android:textColor="#d9e5f3" android:textStyle="bold"/>

    <TextView android:layout_width="wrap_content" android:layout_height="50dp" android:text="" android:textSize="25dp" android:textColor="#d9e5f3" android:textStyle="bold" android:id="@+id/user_txtphone"/>

</LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content" android:layout_height="50dp" android:text="Description : " android:textSize="25dp" android:textColor="#d9e5f3" android:textStyle="bold"/>

    <TextView android:layout_width="wrap_content" android:layout_height="50dp" android:text="" android:textSize="25dp" android:textColor="#d9e5f3" android:textStyle="bold" android:id="@+id/user_txtdescp"/>

</LinearLayout>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="10dp" android:text="Email ID : " android:textSize="25dp" android:textColor="#d9e5f3" android:textStyle="bold"/>

    <TextView android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="10dp" android:text="" android:textSize="20dp" android:textColor="#d9e5f3" android:textStyle="bold" android:id="@+id/user_txtemail"/>

</LinearLayout>

    <Button android:layout_width="250dp" android:layout_height="wrap_content" android:background="#009a9a" android:layout_marginTop="50dp" android:text="Change Description" android:textStyle="bold" android:id="@+id/user_btn" android:layout_marginLeft="60dp" android:gravity="center"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:textColor="#ffffff" android:id="@+id/user_adddescrip" android:visibility="invisible" android:textColorHint="#ffffff" android:hint="Add Description"/>

    <Button android:layout_width="250dp" android:layout_height="wrap_content" android:background="#009a9a" android:layout_marginTop="50dp" android:text="Upload Description" android:textStyle="bold" android:id="@+id/user_btndes" android:layout_marginLeft="60dp" android:gravity="center" android:visibility="invisible"/>

</LinearLayout>

</RelativeLayout>