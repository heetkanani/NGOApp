<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <include layout="@layout/navigation_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
    android:background="@drawable/grdnt"
        android:layout_marginTop="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#009a9a"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        tools:text="Description"
        android:text="Description"
        android:textSize="24sp"
        android:textColor="#d9e5f3"
        android:id="@+id/textView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:textColor="#d9e5f3"
        android:text="TextView"
        android:id="@+id/description"/>

</LinearLayout>

</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#009a9a">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        tools:text="Eligibilty"
        android:text="Eligibilty"
        android:textSize="24sp"
        android:textColor="#d9e5f3"
        android:id="@+id/testView2"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:text="TextView"
        android:id="@+id/income"
        android:textColor="#d9e5f3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:text="TextView"
        android:id="@+id/applicable"
        android:textColor="#d9e5f3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="TextView"
        android:id="@+id/nationality"
        android:textColor="#d9e5f3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="TextView"
        android:id="@+id/status"
        android:textColor="#d9e5f3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</LinearLayout>

</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView android:layout_height="wrap_content"
        app:cardBackgroundColor="#009a9a"
        android:layout_width="match_parent" app:cardCornerRadius="12dp" android:layout_margin="8dp">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_margin="8dp" android:text="Documents" android:textSize="24sp" android:textColor="#d9e5f3" android:id="@+id/textview3"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_margin="4dp" android:text="TextView" android:id="@+id/docs"
        android:textColor="#d9e5f3" android:layout_weight="1"/>

</LinearLayout>

</android.support.v7.widget.CardView>

    <Button android:layout_height="56dp"
        android:background="#009a9a"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:text="Apply Now"
        android:textColor="#d9e5f3"
        android:id="@+id/linkButton"/>

</LinearLayout>

</ScrollView>
</RelativeLayout>