<?xml version="1.0"?>

    <RelativeLayout tools:context=".MainChatActivity" android:background="@color/card_color" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_height="fill_parent" android:layout_width="fill_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:transcriptMode="alwaysScroll" android:dividerHeight="0dp" android:divider="@null" android:layout_alignParentTop="true" android:layout_above="@+id/listFooter" android:id="@+id/chat_list_view"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/listFooter" android:gravity="bottom" android:orientation="horizontal" android:layout_alignParentBottom="true">

    <EditText android:layout_height="fill_parent" android:layout_width="0dp" android:id="@+id/messageInput" android:gravity="center_horizontal" android:maxLines="1" android:inputType="textCapSentences|textAutoCorrect" android:imeOptions="actionUnspecified" android:imeActionLabel="@string/action_send" android:hint="@string/prompt_msg" android:textColorHint="@color/black" android:textColor="@color/black" android:layout_weight="1"/>

    <ImageButton android:background="@drawable/sendbutton" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/sendButton" android:contentDescription="@string/action_send" android:src="@android:drawable/ic_menu_send" android:padding="10dp"/>

</LinearLayout>

</RelativeLayout>